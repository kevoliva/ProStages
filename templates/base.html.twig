<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>
        {% block title %}

        ProStages

        {% endblock %}
        </title>



        {% block stylesheets %}
        <link rel="stylesheet" href="{{asset('/css/fontello.css')}}">
        <link rel="stylesheet" href="{{asset('/css/bootstrap.min.css')}}">
        {% endblock %}
    </head>
    <body>

      <!-- container -->
      <div class="container-fluid">
      	 <div class="row">
      		<div class="col-md-12">
              {% block intitule %}
                <div class="p-3 mb-2 bg-dark text-white">
                  <center><h1 class = "icon-leaf"> ProStages</h1></center>
                </div>
                </br></br>
              {% endblock %}
      		</div>
        </div>
      	<div class="row">
      		<div class="col-md-9">
            {% block contenu %}
            <!-- Tableau contenant les différents stages/entreprises/formations-->
            <table class="table table-striped table-dark">
  <thead>
    <tr>
      <th scope="col">Intitulé</th>
      <th scope="col">Entreprise</th>
      <th scope="col">Formation</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th scope="row">1</th>
      <td>Benjouy</td>
      <td>Otto</td>
    </tr>
    <tr>
      <th scope="row">2</th>
      <td>Jacob</td>
      <td>Thornton</td>
    </tr>
    <tr>
      <th scope="row">3</th>
      <td>Larry</td>
      <td>the Bird</td>
    </tr>
  </tbody>
</table>
            {% endblock %}
      		</div>
      		<div class="col-md-3">
            {% block tri %}
            <h4><center>Trier par :</center></h4></br>
            <ul class="list-group">
  <li class="list-group-item"><a href="http://localhost:8000/entreprises">Entreprises</a></li>
  <li class="list-group-item"><a href="http://localhost:8000/formations">Formations</a></li>
</ul>
            {% endblock %}
      		</div>
      	</div>
      	<div class="row">
      		<div class="col-md-12">
            {% block footer %}
            <h6 align = "right">Kévin Oliva Fondation, by <a href="https://symfony.com/">Symfony</a>
            and <a href="https://getbootstrap.com/">Bootstrap</a></h6>
            {% endblock %}
      		</div>
      	</div>
      </div>

        {% block javascripts %}
        <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
        <script src="{{asset('/js/bootstrap.min.js')}}"></script>
        {% endblock %}
    </body>
</html>
