<form method="post" action="{{ path('formation_delete', {'id': formation.id}) }}" onsubmit="return confirm('Voulez-vous vraiment supprimer cette formation ?');">
  <input type="hidden" name="_method" value="DELETE">
  <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ formation.id) }}">
  <center>
    <button class="btn btn-danger">Supprimer cette formation</button>
  </center>
</form>
