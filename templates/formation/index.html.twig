{% extends 'base.html.twig' %}

{% block title %}Formations{% endblock %}

{% block contenu %}

<table class="table table-striped table-dark">
  <thead>
    <tr>
      <th>NomCourt</th>
      <th>Nom</th>
      <th>actions</th>
    </tr>
  </thead>
  <tbody>
    {% for formation in formations %}
    <tr>
      <td>{{ formation.nomCourt }}</td>
      <td>{{ formation.nom }}</td>
      <td>
        <a href="{{ path('formation_show', {'nom': formation.nom}) }}" style="color:white; text-decoration:none;"><i class = "icon-eye"></i></a>
        <a href="{{ path('formation_edit', {'id': formation.id}) }}" style="color:white; text-decoration:none;"><i class = "icon-pencil"></i></a>
      </td>
    </tr>
    {% else %}
    <tr>
      <td colspan="4">Aucune formation trouv√©e</td>
    </tr>
    {% endfor %}
  </tbody>
</table>

{# Ajout d'une formation SI administrateur #}
{% if is_granted('ROLE_ADMIN') %}
<center>
  <a href="{{ path('formation_new') }}">
    <button class = "btn btn-dark btn-outline">Ajouter une formation</button>
  </a>
</center>
{% endif %}
{% endblock %}
