{% extends 'base.html.twig' %}

{% block contenu %}

{% if action == "ajouter" %}
<center>
  <h2 class = "display-4">Ajout d'un stage</h2>
  <br>
</center>

{% else %}
<center>
  <h2 class = "display-4">Modification d'un stage</h2>
  <br>
</center>
{% endif %}

{{form_start(vueFormulaireStage, {'attr':{'novalidate':'novalidate'}}) }}

<label>Libellé du stage</label>
{{form_errors(vueFormulaireStage.titre)}}
{{form_widget(vueFormulaireStage.titre, {'attr':{'placeholder':"Développeur Web, Analyste Programmeur..."}})}}
<br>

<label>Description du stage</label>
{{form_errors(vueFormulaireStage.description)}}
{{form_widget(vueFormulaireStage.description, {'attr':{'placeholder':"Vous aurez pour mission de..."}})}}
<br>

<hr>
<center><h2 class = "display-4">Ajout de l'entreprise concernée</h2></center>
{{form_errors(vueFormulaireStage.entreprise)}}
{{form_widget(vueFormulaireStage.entreprise)}}
<br>

<hr>
<center><h2 class = "display-4">Stage proposé pour</h2></center>
<br>
{{form_errors(vueFormulaireStage.formation)}}
{{form_widget(vueFormulaireStage.formation)}}
<br>

<br>
<center>
  <button type="submit" class="btn btn-dark">Valider !</button>
</center>

{{form_end(vueFormulaireStage)}}

{% endblock %}

