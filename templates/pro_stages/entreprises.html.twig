{% extends 'base.html.twig' %}
{% block title %}
Entreprises
{% endblock %}

{% block contenu %}

<table class="table table-striped table-dark">
  <thead>
    <tr>
      <th scope="col">Entreprise</th>
      <th scope="col">Site Web</th>
      <th scope="col">Mail</th>
    </tr>
  </thead>
  <tbody>

    {% for entrepriseCourante in entreprises %}

    <tr>

      <td><a href = "{{path('stages_par_entreprise_prostages', {nom:entrepriseCourante.nom})}}" style="color:white; text-decoration:none;">
        {{ entrepriseCourante.nom }}
      </a></td>

      <td>{{ entrepriseCourante.siteWeb }}</td>
      <td>{{ entrepriseCourante.email }}</td>
      <td>
        <center>
          <a href="{{path('modifier_entreprise_prostages', {id:entrepriseCourante.id})}}" style="color:white; text-decoration:none;">
            <i class = "icon-pencil"></i>
          </a>
        </center>
      </td>

    </tr>

    {% endfor %}
  </tbody>
</table>

<center>
  <a href="{{ path('ajouter_entreprises_prostages') }}">
    <button class = "btn btn-dark btn-outline">Ajouter une entreprise</button>
  </a>
</center>

{% endblock %}
