{% extends 'base.html.twig' %}
{% block title %}
Formations
{% endblock %}

{% block contenu %}

<table class="table table-striped table-dark">
  <thead>
    <tr>
      <th scope="col">Nom court</th>
      <th scope="col">Nom long</th>
    </tr>
  </thead>
  <tbody>

    {% for formationCourante in formations %}

    <tr>

      <td><a href = "{{ path('accueil_pro_stages')}}" style="color:white; text-decoration:none;">
        {{ formationCourante.nomCourt }}
      </a></td>

      <td><a href = "{{ path('accueil_pro_stages')}}" style="color:white; text-decoration:none;">
        {{ formationCourante.nom }}
      </a></td>


    </tr>

  {% endfor %}
</tbody>
</table>

{% endblock %}
